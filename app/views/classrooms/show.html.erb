<%
  actions = [
    { label: 'In Danh Sách', path: classroom_path(format: :pdf) },
    { label: 'Xuất Excel', path: classroom_path(format: :xlsx) },
    { label: 'In Sơ Yếu Lý Lịch', path: classroom_students_personal_details_path(@classroom, format: :pdf) },
    { label: 'In Bảng Tự Tạo', path: classroom_custom_export_path(@classroom) }
  ]

  admin_actions = [
    { label: 'In Danh Sách Lớp Dán Bảng', path: classroom_path(format: :pdf), params: { style: :compact } },
    { label: 'In Số Điện Thoại GLV', path: classroom_path(format: :pdf), params: { style: :teachers_contact } }
  ]
%>

<%= render 'components/form/form', object: @classroom, heading: 'Thông Tin Lớp' %>
<%= render 'teachers/info_table', guidances: @classroom.guidances unless @classroom.guidances.empty? %>
<%= render 'students/info_table', enrollments: @classroom.enrollments unless @classroom.enrollments.empty? %>

<% if @classroom.id %>
  <%= render 'components/button_group', actions: actions %>
  <%= render 'components/button_group', actions: admin_actions if @current_user.admin? %>
  </fieldset>
<% end %>