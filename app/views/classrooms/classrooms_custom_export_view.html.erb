<h1>In Bảng Tự Tạo</h1>

<%= form_tag classrooms_custom_export_path, method: :post do %>
  <fieldset>
    <div>
      <div class="label">Tiêu Đề:</div>
      <%= text_field_tag :title, nil, required: true %>
    </div>

    <div>
      <div class="label">Chiều Giấy:</div>
      <%= radio_button_tag :page_layout, :landscape, true, width: '10px' %>
      <%= label_tag :page_layout_landscape, 'Khổ Ngang' %>
      <%= radio_button_tag :page_layout, :portrait %>
      <%= label_tag :page_layout_portrait, 'Khổ Dọc' %>
    </div>
    <div>
      <div class="label">Sắp xếp:</div>
      <%= radio_button_tag :sort, :classroom, true, width: '10px' %>
      <%= label_tag :sort_classroom, 'Theo lớp' %>
      <%= radio_button_tag :sort, :location %>
      <%= label_tag :sort_location, 'Theo vị trí' %>
    </div>

    <div>
      <div class="label">Các Cột:</div>
      <%= text_field_tag :columns, nil, required: true, placeholder: 'cột 1,cột 2,cột 3,...' %>
    </div>

    <%= submit_tag "Tạo", :class => :button %>
  </fieldset>
<% end %>