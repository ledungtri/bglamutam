<h1>Listing Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Christian name</th>
      <th>Full name</th>
      <th>Named date</th>
      <th>Date birth</th>
      <th>Occupation</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Street number</th>
      <th>Street name</th>
      <th>Ward</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.christian_name %></td>
        <td><%= teacher.full_name %></td>
        <td><%= teacher.named_date %></td>
        <td><%= teacher.date_birth %></td>
        <td><%= teacher.occupation %></td>
        <td><%= teacher.phone %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.street_number %></td>
        <td><%= teacher.street_name %></td>
        <td><%= teacher.ward %></td>
        <td><%= teacher.district %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>