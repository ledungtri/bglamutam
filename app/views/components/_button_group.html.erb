<%= render 'components/collapsible', heading: heading do %>
  <% columns = actions.count > 6 ? 6 : actions.count %>
  <fieldset style="grid-template-columns: repeat(<%= columns %>, 1fr)">
    <% actions.each do |action| %>
      <%= render 'components/button', button: action %>
    <% end %>
  </fieldset>
<% end %>