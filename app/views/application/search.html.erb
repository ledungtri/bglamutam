<h1>Tìm Kiếm</h1>


<h2>Tìm kiếm Thiếu Nhi:</h2>
<form action="/search" method="get">
    <div style="text-align: center;">
        <div class="block">
            <div class="label">Họ và tên:</div>
            <input type="text" name="student_name"/>
        </div>
    </div>
    <div class="actions" style="padding-top:10px">
      <button type="submit" class="button_search" value="Tìm Kiếm">
		 <i class="fa-solid fa-magnifying-glass"></i>  Tìm Kiếm
		</button>
    </div>
</form>

<h2>Tìm kiếm Giáo Lý Viên:</h2>
<form action="/search" method="get">
    <div style="text-align: center;">
        <div class="block">
            <div class="label">Họ và tên:</div>
          <input type="text" name="teacher_name"/>
        </div>
    </div>
    <div class="actions" style="padding-top:10px">
       <button type="submit" class="button_search" value="Tìm Kiếm">
		 <i class="fa-solid fa-magnifying-glass"></i>  Tìm Kiếm
		</button>
    </div>
</form>


<% unless @students.nil? %>
    <h2>Count : <%= @students.count %></h2>
    <% @students.each do |s| %>
    <%= link_to s.full_name, s %>
    <br>
    <% end %>
<% end %>

<% unless @teachers.nil? %>
    <h2>Count : <%= @teachers.count %></h2>
    <% @teachers.each do |t| %>
    <%= link_to t.full_name, t %>
    <br>
    <% end %>
<% end %>