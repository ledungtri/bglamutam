<h1>Đăng Nhập</h1>
<%= form_tag sessions_path do %>
  <div>
    <div class="label ">Tên Đăng Nhập:</div>
    <%= text_field_tag :username %>
  </div>
  <div>
    <div class="label">Mật Khẩu:</div>
    <%= password_field_tag :password %>
  </div>
  <button>
    <i class="fa-solid fa-circle-right"></i> Đăng Nhập
  </button>
<% end %>